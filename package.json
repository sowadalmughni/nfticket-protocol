{
  "name": "nfticket-protocol-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Open-source NFT ticketing protocol monorepo",
  "author": "Md. Sowad Al-Mughni <sowad@kitalonlabs.com>",
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend/nfticket-dashboard",
    "frontend/mobile-app/NFTicketApp",
    "subgraph"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces --if-present",
    "dev:dashboard": "npm run dev --workspace=frontend/nfticket-dashboard",
    "dev:backend": "npm run node --workspace=backend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,sol}\""
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
