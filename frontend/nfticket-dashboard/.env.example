# ============================================
# NFTicket Dashboard - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Variables must be prefixed with VITE_ to be available in the browser

# ==================
# WalletConnect
# ==================
# Get from: https://cloud.walletconnect.com/

VITE_WALLETCONNECT_PROJECT_ID=

# ==================
# Contract Addresses
# ==================
# Run `npm run deploy:sepolia` or `npm run deploy:polygon` in backend/ first

# Polygon Mainnet (Production - Primary Chain)
VITE_CONTRACT_POLYGON_NFTICKET=
VITE_CONTRACT_POLYGON_POAP=
VITE_CONTRACT_POLYGON_LOYALTY=

# Ethereum Mainnet
VITE_CONTRACT_MAINNET_NFTICKET=
VITE_CONTRACT_MAINNET_POAP=
VITE_CONTRACT_MAINNET_LOYALTY=

# Base
VITE_CONTRACT_BASE_NFTICKET=
VITE_CONTRACT_BASE_POAP=
VITE_CONTRACT_BASE_LOYALTY=

# Arbitrum
VITE_CONTRACT_ARBITRUM_NFTICKET=
VITE_CONTRACT_ARBITRUM_POAP=
VITE_CONTRACT_ARBITRUM_LOYALTY=

# Polygon Amoy Testnet
VITE_CONTRACT_AMOY_NFTICKET=
VITE_CONTRACT_AMOY_POAP=
VITE_CONTRACT_AMOY_LOYALTY=

# Sepolia Testnet
VITE_CONTRACT_SEPOLIA_NFTICKET=
VITE_CONTRACT_SEPOLIA_POAP=
VITE_CONTRACT_SEPOLIA_LOYALTY=

# ==================
# RPC URLs (Optional - defaults provided)
# ==================

VITE_RPC_POLYGON=https://rpc.ankr.com/polygon
VITE_RPC_MAINNET=https://rpc.ankr.com/eth
VITE_RPC_BASE=https://mainnet.base.org
VITE_RPC_ARBITRUM=https://arb1.arbitrum.io/rpc
VITE_RPC_SEPOLIA=https://rpc.ankr.com/eth_sepolia
VITE_RPC_POLYGON_AMOY=https://rpc-amoy.polygon.technology

# ==================
# API Endpoints
# ==================

VITE_API_URL=http://localhost:3001

# ==================
# The Graph Subgraph URLs
# ==================
# Deploy subgraph first (see subgraph/README.md), then update these URLs
# Get your deployment URL from: https://thegraph.com/studio/

# Testnets (Development)
VITE_SUBGRAPH_AMOY=
VITE_SUBGRAPH_SEPOLIA=

# Mainnets (Production)
VITE_SUBGRAPH_POLYGON=
VITE_SUBGRAPH_MAINNET=
VITE_SUBGRAPH_BASE=
VITE_SUBGRAPH_ARBITRUM=

# Local development (optional - requires local graph-node)
VITE_SUBGRAPH_LOCAL=http://localhost:8000/subgraphs/name/nfticket-protocol

# ==================
# Seats.io (Seat Selection)
# ==================
# Get from: https://app.seats.io/

VITE_SEATSIO_PUBLIC_KEY=
VITE_SEATSIO_REGION=eu

# ==================
# Stripe (Fiat Payments - Public Key Only)
# ==================

VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ==================
# Feature Flags
# ==================

VITE_ENABLE_TESTNET=true
VITE_ENABLE_FIAT_PAYMENTS=true
VITE_ENABLE_SEAT_SELECTION=true
