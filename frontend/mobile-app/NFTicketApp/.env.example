# ============================================
# NFTicket Mobile App - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# For React Native, variables must be prefixed with REACT_APP_ or use react-native-config

# ==================
# API Configuration
# ==================

# Backend API URL
API_URL=http://localhost:3001

# ==================
# Contract Addresses
# ==================
# Run `npm run deploy:amoy` in backend/ first, then copy addresses here

# Polygon Amoy Testnet (Recommended for Development)
CONTRACT_AMOY_NFTICKET=
CONTRACT_AMOY_POAP=
CONTRACT_AMOY_LOYALTY=

# Polygon Mainnet (Production)
CONTRACT_POLYGON_NFTICKET=
CONTRACT_POLYGON_POAP=
CONTRACT_POLYGON_LOYALTY=

# Sepolia Testnet (Alternative)
CONTRACT_SEPOLIA_NFTICKET=
CONTRACT_SEPOLIA_POAP=
CONTRACT_SEPOLIA_LOYALTY=

# Ethereum Mainnet
CONTRACT_MAINNET_NFTICKET=
CONTRACT_MAINNET_POAP=
CONTRACT_MAINNET_LOYALTY=

# ==================
# RPC URLs
# ==================
# Get free endpoints from: alchemy.com, infura.io, ankr.com

RPC_URL_POLYGON=https://rpc.ankr.com/polygon
RPC_URL_POLYGON_AMOY=https://rpc-amoy.polygon.technology
RPC_URL_MAINNET=https://rpc.ankr.com/eth
RPC_URL_SEPOLIA=https://rpc.ankr.com/eth_sepolia

# ==================
# WalletConnect
# ==================
# Get from: https://cloud.walletconnect.com/

WALLETCONNECT_PROJECT_ID=

# ==================
# Default Network
# ==================
# Options: polygon, polygon_amoy, mainnet, sepolia
# Use polygon_amoy for development, polygon for production

DEFAULT_NETWORK=polygon_amoy
