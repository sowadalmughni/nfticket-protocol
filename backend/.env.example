# ============================================
# NFTicket Protocol - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values (LOCAL ONLY)
# NEVER commit .env to version control. Keep secrets on your machine.
# Tip: Use the pre-commit hook in .githooks to block accidental secret commits.

# ==================
# REQUIRED - Backend
# ==================

# Private key for signing QR proofs (REQUIRED in production)
# Generate with: node -e "console.log('0x' + require('crypto').randomBytes(32).toString('hex'))"
SIGNER_PRIVATE_KEY=

# JWT secret for API authentication (REQUIRED in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# ==================
# REQUIRED - Deployment
# ==================

# Private key for deploying contracts (with ETH/MATIC for gas)
# DO NOT use the same key as SIGNER_PRIVATE_KEY
DEPLOYER_PRIVATE_KEY=

# Private key for minting tickets (must have MINTER_ROLE)
# If not set, DEPLOYER_PRIVATE_KEY is used as fallback
MINTER_PRIVATE_KEY=

# Default chain ID (137 = Polygon, 11155111 = Sepolia)
CHAIN_ID=137

# Chain ID used for Stripe minting (defaults to CHAIN_ID)
PAYMENTS_CHAIN_ID=

# ==================
# Blockchain RPC URLs
# ==================
# Get free endpoints from: alchemy.com, infura.io, ankr.com

# Mainnets
RPC_URL_MAINNET=https://rpc.ankr.com/eth
RPC_URL_POLYGON=https://rpc.ankr.com/polygon
RPC_URL_BASE=https://mainnet.base.org
RPC_URL_ARBITRUM=https://arb1.arbitrum.io/rpc

# Testnets
RPC_URL_SEPOLIA=https://rpc.ankr.com/eth_sepolia
RPC_URL_POLYGON_AMOY=https://rpc-amoy.polygon.technology

# ==================
# Contract Addresses
# ==================
# These are auto-generated after running: npx hardhat run scripts/deploy.js --network <network>

# Polygon Mainnet (Production)
CONTRACT_POLYGON=
CONTRACT_POLYGON_POAP=

# Sepolia Testnet (Development)
CONTRACT_SEPOLIA=
CONTRACT_SEPOLIA_POAP=

# Polygon Amoy Testnet
CONTRACT_AMOY=
CONTRACT_AMOY_POAP=

# ==================
# Block Explorer API Keys
# ==================
# For contract verification

ETHERSCAN_API_KEY=
POLYGONSCAN_API_KEY=
BASESCAN_API_KEY=
ARBISCAN_API_KEY=

# ==================
# Stripe (Fiat Payments)
# ==================
# Get from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Base URL for ticket metadata (used for Stripe minting)
TICKET_METADATA_BASE_URL=https://api.nfticket.example.com/tickets/

# ==================
# Firebase (Push Notifications)
# ==================
# Get from: https://console.firebase.google.com/ -> Project Settings -> Cloud Messaging

FCM_SERVER_KEY=

# ==================
# Seats.io (Seat Selection)
# ==================
# Get from: https://app.seats.io/

SEATSIO_SECRET_KEY=
SEATSIO_PUBLIC_KEY=
SEATSIO_REGION=eu

# ==================
# Redis (Optional - Production)
# ==================
# For persistent nonce storage. Falls back to in-memory if not set.

REDIS_URL=redis://localhost:6379

# ==================
# The Graph (Subgraph)
# ==================
# Get from: https://thegraph.com/studio/

GRAPH_ACCESS_TOKEN=
SUBGRAPH_DEPLOYMENT_ID=

# ==================
# Server Configuration
# ==================

PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# QR code proof expiration in seconds (rotating QR)
PROOF_EXPIRATION=15
